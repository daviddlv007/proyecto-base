{$DOMAIN} {
    encode zstd gzip

    # Archivos estáticos en la raíz
    root * /vol/static
    file_server

    # API
    handle /api/* {
        uri strip_prefix /api
        reverse_proxy backend:8000
    }

    # Admin
    handle /admin/* {
        reverse_proxy backend:8000
    }

    # Healthcheck
    handle /healthz* {
        reverse_proxy backend:8000
    }

    header {
        Strict-Transport-Security "max-age=63072000; includeSubDomains; preload"
    }
}
